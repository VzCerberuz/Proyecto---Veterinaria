@model IEnumerable<Proyecto_Veterinaria.Models.RegistroHorarios>

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:white; text-align:center">Tabla de registro</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="color:white;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tblDatosHorarios.TipoHorario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblEmpleados.Nombre)
        </th>
        <th >
            @Html.DisplayNameFor(model => model.Fecha2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="color:white;">
        <td>
            @Html.DisplayFor(modelItem => item.tblDatosHorarios.TipoHorario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblEmpleados.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Horas)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
            @Html.ActionLink("Salario", "Salario", new { id = item.Id })
        </td>
    </tr>
}

</table>
